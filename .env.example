# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=root
DB_PASSWORD=secret
DB_DATABASE=greenwich_ap
DB_URL=your_database_url_here

# pgAdmin
PGADMIN_EMAIL=admin@greenwich.edu
PGADMIN_PASSWORD=secret
PGADMIN_PORT=5050

# JWT
JWT_SECRET=your-super-secret-key-here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Swagger
SWAGGER_TITLE=Greenwich AP API
SWAGGER_DESCRIPTION=Academic Programme Management System API
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

ALLOWED_ORIGINS=https://accounts.google.com

FRONTEND_URL=

